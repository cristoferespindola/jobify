<%- include('../../header') %>
<div class="row">
  <div class="title">
    <h2 style="display: inline-block;">Editar vaga:</h2> &nbsp;
    <a href="/admin/vagas" style="font-size: 18px; ">Voltar</a>
  </div>
  <form method="POST">
    <label for="titulo">Titulo:</label>
    <input type="text" name="titulo" id="titulo" value="<%- vaga.titulo %>">
    <label for="descricao">Descrição:</label>
    <textarea name="descricao" id="descricao"><%- vaga.descricao %></textarea>
    <label for="categoria">Categoria</label>
    <select name="categoria" id="categoria">
      <% categorias.forEach( cat => { %>
      <!-- <option value="<%- cat.id %>" <% if( vaga.categoria === cat.id) { %> selected <% } %>> -->
      <option value="<%- cat.id %>" selected="<%- vaga.categoria === cat.id ? true : false %>">
        <%- cat.nome %>
      </option>
      <% }) %>
    </select>
    <input type="submit" value="Enviar">
  </form>
</div>
<%- include('../../footer') %>