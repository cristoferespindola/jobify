<%- include('../../header') %>
<div class="row">
  <div class="title">
    <h2 style="display: inline-block;">Administrar categorias:</h2> &nbsp;
    <a href="/admin/categorias/nova">Nova categoria</a> &nbsp;
    <a href="/admin" style="font-size: 18px; ">Voltar</a>
  </div>
  <ul>
    <% categorias.forEach( cat => {  %>
    <li>
      <%- cat.nome %> |
      <a href="/admin/categorias/editar/<%- cat.id %>">Editar</a>
      <a href="/admin/categorias/deletar/<%- cat.id %>">Excluir</a>
    </li>
    <% }) %>
  </ul>
</div>
<%- include('../../footer') %>